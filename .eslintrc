{
  "env": {
    "node": true
  },
  "extends": "airbnb",
  rules: {
    "no-console": 0,  // allow use of console (off by default in the node environment)
    "no-undef": 0, // allow undefined 'describe' function from mocha
    "max-len": 0,
    "commma-dangle": 0,
    "no-underscore-dangle": 0,
    "func-names": 0,
    "space-before-function-paren": 0,
    "no-param-reassign": 0,
    "no-loop-func": 0,
  }
}